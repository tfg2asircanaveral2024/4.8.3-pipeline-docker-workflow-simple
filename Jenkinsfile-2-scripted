// similar al fichero Jenkinsfile de este repositorio, pero cada fase se ejecuta en un contenedor distinto
node {
    
    stage('Primera fase') {
        docker.image('ubuntu:jammy').inside {
            sh 'echo fichero > /var/fichero.txt'
            sh 'hostname'
        }
    }

    stage('Segunda fase') {
        docker.image('ubuntu:jammy').inside {
            sh 'hostname'
            sh 'ls /var | grep fichero'
        }
    }
}